{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "NostrTube",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "installCommand": "pnpm install",
        "buildCommand": "pnpm pre-build"
      }
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/.*",
      "dest": "/index.html"
    }
  ]
}